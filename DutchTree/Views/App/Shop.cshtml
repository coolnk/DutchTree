@using DutchTree.Data.Entities
@using Microsoft.IdentityModel.Protocols.OpenIdConnect
@model IEnumerable<DutchTree.Data.Entities.Product>

@{
    ViewBag.Title = "Shop";
    Layout = "_Layout";
}


<p>@Model.Count()</p>
@foreach (var p in Model)
{
    <div class="col-md-3">
        <div class="well well-sm">
            <img src="~/img/@(p.ArtId).jpg" class="img-responsive"  alt="@p.Title"/>
            <h3>@p.Category - @p.Size</h3>
                <ul  class="product-props">
                    <li>Price: @p.Price</li>
                    <li>Artist: @p.Artist</li>
                    <li>Title: @p.Title</li>
                    <li>Description: @p.ArtDescription</li>
                </ul>
                <button id="like" class="btn btn-success">Buy</button>
        </div>
    </div>
}